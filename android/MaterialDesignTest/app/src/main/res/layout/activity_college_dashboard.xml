<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.collegeDashboard.CollegeDashboard">

    <include
        android:id="@+id/include4"
        layout="@layout/appbar" />


    <FrameLayout
        android:id="@+id/collegeDashboardFragment"
        android:layout_width="395dp"
        android:layout_height="677dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/collegeDashboardContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <GridLayout
                android:layout_width="362dp"
                android:layout_height="293dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                android:columnCount="1"
                android:padding="16dp"
                android:rowCount="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/collegeDashboard"
                app:layout_constraintVertical_bias="0.18">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="#66BA35"
                    app:cardCornerRadius="14dp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/uploadDataTab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:background="#5FB642"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/uploadDataTabText"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:text="Upload Data"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>


            </GridLayout>

            <TextView
                android:id="@+id/collegeDashboard"
                android:layout_width="207dp"
                android:layout_height="38dp"
                android:layout_marginTop="80dp"
                android:text="College Dashboard"
                android:textAlignment="center"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>