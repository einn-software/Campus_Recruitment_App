<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.instructions.InstructionActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/appbar" />

    <TextView
        android:id="@+id/guidelinesHeaderText"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:text="Exam Guidelines:"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <CheckBox
        android:id="@+id/agreeToGuidelinesCheck"
        android:layout_width="363dp"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorAccent"
        android:paddingEnd="10dp"
        android:text="I have read and agree to the guidelines"
        app:layout_constraintBottom_toTopOf="@+id/startTestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelinesText"
        app:layout_constraintVertical_bias="0.83" />

    <Button
        android:id="@+id/startTestButton"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginBottom="48dp"
        android:background="@color/colorPrimary"
        android:enabled="false"
        android:text="Start Test"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/guidelinesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorAccent2"
        android:gravity="top"
        android:padding="10dp"
        android:singleLine="false"
        android:text="MultiAutoCompleteTextViewMultiAutoCompleteTextViewMultiAutoCompleteTextViewMultiAutoCompleteTextViewMultiAutoCompleteText
        ViewMultiAutoCompleteTextViewMultiAutoCompleteTextViewMultiAutoCompleteTextViewMultiAutoCompleteTextViewMultiAutoCompleteTextViewMultiAutoCompleteText
        ViewMultiAutoCompleteTextViewMultiAutoCompleteTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelinesHeaderText" />


</androidx.constraintlayout.widget.ConstraintLayout>